@model IEnumerable<Entities.Cliente>

@{
	var titulo = "Clientes";
	ViewBag.Title = titulo;
}

<h2>@titulo</h2>

<p>
	@Html.ActionLink("Create New", "Create")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Nome)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Idade)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Endereco)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Credito)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Bairro)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.IdCidade)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.RetemImpostos)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Filhos)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Vip)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Nome)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Idade)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Endereco)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Credito)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Bairro)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.IdCidade)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.RetemImpostos)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Filhos.Count)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Vip)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
				@Html.ActionLink("Details", "Details", new { id = item.Id }) |
				@Html.ActionLink("Delete", "Delete", new { id = item.Id })
			</td>
		</tr>
	}

</table>
